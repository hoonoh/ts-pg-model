{
  "compilerOptions": {
    "target": "ES5",
    "module": "nodenext",
    "lib": ["DOM", "ES5", "ESNext"],
    "sourceMap": true,
    "downlevelIteration": true,
    "strict": true,
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "sourceRoot": "src",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "exclude": ["node_modules", "dist"]
}
